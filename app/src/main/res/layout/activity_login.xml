        <!--app:layout_constraintTop_toTopOf="parent"/>-->

    <EditText
        android:id="@+id/et_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/al_top_margin"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/al_hint_account"
        android:focusedByDefault="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="spread"
        android:background="@drawable/layer_edit_bg"
        android:textCursorDrawable="@drawable/shape_edit_cusor"
        android:paddingVertical="@dimen/custom_edit_vertical_padding"/>

    <!--<ImageView-->
        <!--android:id="@+id/iv_pwd"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@mipmap/al_pwd"-->
        <!--android:layout_marginLeft="@dimen/activity_horizontal_margin"-->
        <!--android:layout_marginStart="@dimen/activity_horizontal_margin"-->
        <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/iv_account"/>-->

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/al_hint_pwd"
        android:focusedByDefault="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_account"
        app:layout_constraintWidth_default="spread"
        android:background="@drawable/layer_edit_bg"
        android:textCursorDrawable="@drawable/shape_edit_cusor"
        android:paddingVertical="@dimen/custom_edit_vertical_padding"/>

    <Button
        android:id="@+id/bt_family"
        android:layout_width="0dp"
        android:text="@string/al_family"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        style="@style/custom_btn_style"
        app:layout_constraintTop_toBottomOf="@id/et_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="spread"
        android:background="@drawable/ripple_btn_red_rdcor_bg"
        android:textColor="@color/slct_btn_red_text"/>

    <Button
        android:id="@+id/bt_visitor"
        android:layout_width="0dp"
        android:text="@string/al_visitor"
        style="@style/custom_btn_style"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/bt_family"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="spread"
        android:background="@drawable/ripple_btn_red_rdcor_bg"
        android:textColor="@color/slct_btn_red_text"/>

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/al_forget"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/bt_visitor"
        app:layout_constraintLeft_toLeftOf="@id/bt_visitor"
        android:textColor="@color/colorSemi"/>

    <TextView
        android:id="@+id/tv_imd_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/al_imd_regist"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/bt_visitor"
        app:layout_constraintRight_toRightOf="@id/bt_visitor"
        android:textColor="@color/colorSemi"/>

</android.support.constraint.ConstraintLayout>