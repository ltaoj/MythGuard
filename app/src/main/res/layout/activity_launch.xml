<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/root">


    <Button
        android:id="@+id/to_login"
        android:layout_width="0dp"
        android:text="@string/al_login"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/al_between_space"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/custom_btn_style"
        android:textColor="@color/slct_btn_red_text"
        android:background="@drawable/ripple_btn_red_bg" />

    <Button
        android:id="@+id/to_regist"
        android:layout_width="0dp"
        android:text="@string/al_regist"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/al_between_space"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/custom_btn_style"
        android:background="@drawable/ripple_btn_cyan_bg"
        android:textColor="@color/slct_btn_cyan_text"/>

</LinearLayout>